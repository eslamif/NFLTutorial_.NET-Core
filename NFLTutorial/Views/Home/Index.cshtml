@model TeamListViewModel

@{
    ViewData["Title"] = "NFL Teams";
}

<div class="row">
    @* Filters *@
    <div class="col-sm-3">

        @* Conference *@
        <h3 class="mt-3">Conference</h3>

        <div class="list-group">
            @foreach (Conference conference in Model.Conferences) {
                <a asp-controller="Home" asp-action="Index" asp-route-activeConference="@conference.ConferenceID" asp-route-activeDivision="@Model.ActiveDivision" class="list-group-item @Model.CheckActiveConference(conference.ConferenceID)">@conference.Name</a>
            }
        </div>

        @* Division *@
        <h3 class="mt-3">Division</h3>

        <div class="list-group">
            @foreach (Division division in Model.Divsisions) {
                <a asp-controller="Home" asp-action="Index" asp-route-activeDivision="@division.DivisionID" asp-route-activeConference="@Model.ActiveConference" class="list-group-item @Model.CheckActiveDivision(division.DivisionID)">@division.Name</a>
            }
        </div>
    </div>

    @* Team List *@
    <div class="col-sm-9">
        <ul class="list-inline">
            @foreach (Team team in Model.Teams) {
                <li class="list-inline-item">
                    <form asp-controller="Home" asp-action="Details" method="post">
                        <button type="submit" class="bg-white border-0">
                            <img src="~/images/@team.LogoImage" alt="@team.Name" title="@team.Name | @team.Conference.Name | @team.Division.Name" />
                        </button>

                        <input type="hidden" asp-for="@team.TeamID" />
                        <input type="hidden" asp-for="ActiveConference" />
                        <input type="hidden" asp-for="ActiveDivision" />
                    </form>
                </li>
            }
        </ul>
    </div>
</div>